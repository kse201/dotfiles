# general
autodetach on
escape ^t^t
shell $SHELL

defscrollback 10000
defmonitor on
altscreen on

# Langage
defkanji utf-8
kanji utf-8
encoding utf-8

startup_message off

bell_msg "^G"
vbell off
# action message in hidden window
activity ""
# bell message in hidden window 
bell_msg "Bell in window %."
msgwait 3

caption always "%{= wb} %?%F%{=bu k}%? %?%h%:%t (screen #%n)%? %{-}"
#caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb%y/%m/%d(%D) %{=b wm}%c"
hardstatus alwayslastline "%{= Gk}%-Lw%40L>%{b kg}%n:%t|%{-}%+Lw%-036=%{b km} %l %{.b} %Y/%m/%d %c:%s"

bind c screen
bind p prev
bind n next
bind l windowlist
bind w windowlist -b
bind - split

# resizeの便利な設定
bind r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^]  command
bind -c resize , eval 'resize +1' 'command -c resize'
bind -c resize . eval 'resize -1' 'command -c resize'

# log
deflog on
logfile "~/.logs/screen-%Y%m%da-%n.log"

# screen上のvimで256色サポートを有効に
defbce on 
attrcolor b ".I"
termcapinfo xterm 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
# termcapinfo xterm-256color 'is=^[r^[m^[2J^[H^[?7h^[?1;4;6l'
term xterm

# window for suspend 
screen -t another 0
screen -t main
