autodetach on
bell_msg "^G"
defkanji utf-8
kanji utf-8
encoding utf-8 ut-f8
defscrollback 10000
escape ^t^t
altscreen on
startup_message off
vbell off
caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb%y/%m/%d(%D) %{=b wm}%c"
bind n screen
bind h prev
bind j next
bind l windowlist

deflog on
logfile "~/.logs/screen-%Y%m%da-%n.log"
