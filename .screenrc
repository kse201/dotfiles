# general
autodetach on
escape ^t^t
shell zsh

defscrollback 10000
defmonitor on
altscreen on

# Langage
defkanji utf-8
kanji utf-8
encoding utf-8 ut-f8

startup_message off

bell_msg "^G"
vbell on
# action message in hidden window
activity ""
# bell message in hidden window 
bell_msg "Bell in window %."

caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb%y/%m/%d(%D) %{=b wm}%c"
bind c screen
bind p prev
bind n next
bind l windowlist
bind w windowlist -b
bind - split

# resizeの便利な設定
bind r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^]  command
bind -c resize , eval 'resize +1' 'command -c resize'
bind -c resize . eval 'resize -1' 'command -c resize'

# log
deflog on
logfile "~/.logs/screen-%Y%m%da-%n.log"

# screen上のvimで256色サポートを有効に
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on 

# window for suspend 
screen -t another 0
screen -t main
bind ^a screen -t another 0
