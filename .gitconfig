[color]
    status      = auto
    branch      = auto
    ui          = auto
    interactive = auto

[core]
    autocrlf     = false
    editor       = nvim
    pager = delta
    quotepath    = false
    preloadindex = true
    precomposeunicode = true
    untrackedCache = true
    fscache      = true
    attributesfile = /home/vagrant/.gitattributes

; it's does not work for some diff files
; [interactive]
    ; diffFilter = delta --color-only

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "diff"]
    meta = yellow
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

[diff]
    renames = true
    algorithm = patience

[rebase]
    autosquash = true
    autostash  = true

[fetch]
    prune = true

[push]
    default = matching

[help]
    autocorrect = 1

[url "https://"]
    insteadOf = git://

[user]
	name = kse201
	email = kse.201@gmail.com

[merge]
    tool = vimdiff
[mergetool]
    prompt = true
[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
    prompt = false
[diff]
    tool = vimdiff
    compactionHeuristic = true
    indentHeuristic = true

[alias]
    alias    = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
    nevermind = !git reset --hard HEAD && git clean -d -f

    ls       = ls-files
    info     = remote show origin
    who      = shortlog --numbered --summary --email --no-merges --since='3 months'
    pr-setup = config --add remote.origin.fetch+refs/pull/*/head:refs/remotes/origin/pr/*

# ignore
    ignore   = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored  = !git ls-files -v | grep "^[a-z]" ; view ignored files
# status
    st       = status --short --branch
# commit
    cmt      = commit -v
    amend    = commit --amend -v

# checkout
    co       = checkout
    track    = checkout -t
    fetch-pulls = fetch origin +refs/pull/*:refs/remotes/pull/*

# diff
    df       = diff
    dfw      = diff -w --color-words --word-diff-regex='\\w+|[^[:space:]]'
    ds       = diff --stat
    week     = diff \"@{last week}\".. --stat
    precommit = diff --cached

    move = mv
    remove = rm

    back = checkout "-"
    contributors = shortlog -s -n --no-merges

# log
    graph = log --graph --date-order -C -M --pretty=format:'%C(red)%h%Creset - %C(green)%ad %C(Cyan)[%an]%C(Yellow)%d%Creset %s' --date=short --color=always
    history = !git graph --all
    file-trail = log --follow -p -w

    # show root commit for two branches
    # git diverge-commit <src> <dest>
    diverge-commit = "!f() { git show-branch --sha1-name \"$1\" \"$2\" | tail -1; }; f"

# list command
    branches = show-branch -a --list
    tags = tag
    stashes = stash list
    remotes = remote -v

    patch = add --patch
    add-all = add --update

    # changing status
    discard = checkout --
    stage = add
    staged = diff --cached
    unstage = reset -q HEAD --
    save     = commit -v

    create-branch = checkout -b
    rename-branch = branch -m
    delete-branch = branch -D
    name-branch = symbolic-ref --short HEAD
[stash]
    showPatch = true
[commit]
    template = ~/.gitmessage.txt
[http "https://gopkg.in"]
    followRedirects = true
[advice]
    statusHints = true
[blame]
    date = relative

[diff]
    renames = true

[credential]
    helper = store --file ~/.git-credentials
    helper = cache --timeout 30000

[includeIf "gitdir:~/.ghq/office/"]
    path = ~/.ghq/office/.gitconfig

[ghq]
    root = ~/.ghq

[ghq "https://bps-github.pstg.paas.cloud.global.fujitsu.com"]
    root = ~/.ghq/office
[hub]
	protocol = https
[pull]
    rebase = false

[delta]
    features = decorations
    whitespace-error-style = 22 reverse
	side-by-side = true

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
[feature]
	manyFiles = true
