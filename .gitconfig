[color]
    status = auto
    branch = auto
    ui = auto
[core]
	excludesfile = .gitignore
	paper = lv -c
    autocrlf = false
    editor = vim

[merge] ; (1.7.6 later)
    ff = false

[pull] ; (1.7.9 later)
    rebase = true

[branch "master"]
    mergeoptions = --no-ff
    rebase  = true

[diff]
        renames = copies

[alias]
    alias    = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
    ignore   = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored  = !git ls-files -v | grep "^[a-z]" ; view ignored files
    st       = status
    sst      = status --short
    sh       = show
    sb       = show-branch
    rema     = rebase origin/master master
    ci       = commit
    cm       = commit
    cmt      = commit -v
    coma     = commit -a -v
    cma      = commit -a -v
    co       = checkout
    cl       = clone
    dc       = diff --cached
    df       = diff -w
    d        = diff -w --color-words
    dn       = diff -w --name-only
    ds       = diff --stat
    dsp      = diff --stat -p
    graph    = log --graph --date-order -C -M --pretty=format:'<%h> %ad [%an] %Cgreen%d%Creset %s' --all --date=short
    lg       = log --graph --date-order -C -M --pretty=format:'<%h> %ad [%an] %Cgreen%d%Creset %s' --all --date=short
    l        = log --graph --date-order -C -M --pretty=format:'<%h> %ad [%an] %Cgreen%d%Creset %s' --date=short
    ls       = ls-files
    m        = checkout master
    ituja    = log --patch -S
    undo     = reset --hard HEAD~1
    today    = diff @{yesterday}.. --stat
    week     = diff \"@{last week}\".. --stat

[help]
    autocorrect = 1
