[color]
    status      = auto
	branch      = auto
    ui          = auto
    interactive = auto

[core]
    autocrlf     = false
    editor       = nvim
    pager        = less -r
    quotepath    = false
	preloadindex = true
	fscache      = true

[diff]
    renames   = copies
    algorithm = patience

[rebase]
    autosquash = true
    autostash  = true

[fetch]
    prune = true

[push]
	default = matching

[help]
    autocorrect = 1

[url "https://"]
	insteadOf = git://

[user]
    useconfigonly = true
	name = kse201
	email = kse.201@gmail.com

[merge]
    tool = vimdiff
[mergetool]
    prompt = true
[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
    prompt = false
[diff]
    tool = vimdiff

[alias]
    alias    = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort

    br       = show-branch --list
    ls       = ls-files
    info     = remote show origin
    who      = shortlog --numbered --summary --email --no-merges --since='3 months'
	pr-setup = config --add remote.origin.fetch+refs/pull/*/head:refs/remotes/origin/pr/*

# ignore
    ignore   = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored  = !git ls-files -v | grep "^[a-z]" ; view ignored files
# status
    st       = status --short --branch
# commit
    cmt      = commit -v
    amend    = commit --amend

#  push
   psh       = push
   psf       = push --force-with-lease

# checkout
    co       = checkout
    ct       = checkout -t
    delete-merged-branches = !git branch --merged | grep -v \\* | xargs -I % git branch -d %
    fetch-pulls = fetch origin +refs/pull/*:refs/remotes/pull/*

# diff
    df       = diff
    dfw      = diff -w --color-words --word-diff-regex='\\w+|[^[:space:]]'
    ds       = diff --stat
    week     = diff \"@{last week}\".. --stat
    precommit = diff --cached --diff-algorithm=minimal -w

# log
    l        = log --graph --date-order -C -M --pretty=format:'%C(red)%h%Creset - %C(green)%ad %C(Cyan)[%an]%C(Yellow)%d%Creset %s' --date=short
    lg       = log --graph --date-order -C -M --pretty=format:'%C(red)%h%Creset - %C(green)%ad %C(Cyan)[%an]%C(Yellow)%d%Creset %s' --all --date=short

    branches = branch -a
    tags = tag
    stashes = stash list

    unstage = reset -q HEAD --
    discard = checkout --
    uncommit = reset --mixed HEAD~

    brname = symbolic-ref --short HEAD
[stash]
	showPatch = true
[commit]
	template = ~/.gitmessage.txt
[http "https://gopkg.in"]
	followRedirects = true
