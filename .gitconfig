[color]
    status      = auto
	branch      = auto
    ui          = auto
    interactive = auto

[core]
    autocrlf     = false
    editor       = nvim
    pager        = less -r
    quotepath    = false
	preloadindex = true
    precomposeunicode = true
    untrackedCache = true
	fscache      = true

[diff]
    renames   = copies
    algorithm = patience

[rebase]
    autosquash = true
    autostash  = true

[fetch]
    prune = true

[push]
	default = matching

[help]
    autocorrect = 1

[url "https://"]
	insteadOf = git://

[user]
    useconfigonly = true
	name = kse201
	email = kse.201@gmail.com

[merge]
    tool = vimdiff
[mergetool]
    prompt = true
[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
    prompt = false
[diff]
    tool = vimdiff
	compactionHeuristic = true
	indentHeuristic = true

[alias]
    alias    = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
    nevermind = !git reset --hard HEAD && git clean -d -f

    ls       = ls-files
    info     = remote show origin
    who      = shortlog --numbered --summary --email --no-merges --since='3 months'
	pr-setup = config --add remote.origin.fetch+refs/pull/*/head:refs/remotes/origin/pr/*

# ignore
    ignore   = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored  = !git ls-files -v | grep "^[a-z]" ; view ignored files
# status
    st       = status --short --branch
# commit
    amend    = commit --amend -v

# checkout
    co       = checkout
    track    = checkout -t
    fetch-pulls = fetch origin +refs/pull/*:refs/remotes/pull/*

# diff
    df       = diff
    dfw      = diff -w --color-words --word-diff-regex='\\w+|[^[:space:]]'
    ds       = diff --stat
    week     = diff \"@{last week}\".. --stat
    precommit = diff --cached

    move = mv
    remove = rm

    back = checkout "-"
    contributors = shortlog -s -n --no-merges

# log
    graph = log --graph --date-order -C -M --pretty=format:'%C(red)%h%Creset - %C(green)%ad %C(Cyan)[%an]%C(Yellow)%d%Creset %s' --date=short
    history = !git graph --all
    file-trail = log --follow -p -w

    # show root commit for two branches
    # git diverge-commit <src> <dest>
    diverge-commit = "!f() { git show-branch \"$1\" \"$2\" | tail -1; }; f"

# list command
    branches = show-branch -a --list
    tags = tag
    stashes = stash list
    remotes = remote -v

    patch = add --patch
    add-all = add --update

    # changing status
    discard = checkout --
    stage = add
    unstage = reset -q HEAD --
    save     = commit -v

    new-branch = checkout -b
    rename-branch = branch -m
    delete-branch = branch -D
    name-branch = symbolic-ref --short HEAD
[stash]
	showPatch = true
[commit]
	template = ~/.gitmessage.txt
[http "https://gopkg.in"]
	followRedirects = true
[advice]
	statusHints = true
[blame]
	date = relative
[dif]
	renames = true
