[color]
    status = auto
    branch = auto
    ui = auto
[core]
	excludesfile = .gitignore
	paper = lv -c
    autocrlf = false
    editor = vim
    pager = less -r

[merge] ; (1.7.6 later)
    ff = false

[branch "master"]
    mergeoptions = --no-ff

[diff]
        renames = copies

[alias]
    alias    = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort

    ls       = ls-files
    rema     = rebase origin/master master
    undo     = reset --hard HEAD~1
    info     = remote show origin

# clone
    cl       = clone
    cr       = clone --recursive

# ignore 
    ignore   = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored  = !git ls-files -v | grep "^[a-z]" ; view ignored files

# status
    st       = status
    sst      = status --short

# show
    sh       = show
    sb       = show-branch

# commit
    cm       = commit
    cmt      = commit -v
    cma      = commit -a -v
    amend    = commit --amend

# checkout 
    co       = checkout
    ct       = checkout -t 
    master   = checkout master

# diff
    d        = diff -w --color-words
    dc       = diff --cached
    df       = diff -w
    ds       = diff --stat
    today    = diff @{yesterday}.. --stat
    week     = diff \"@{last week}\".. --stat

# log
    l        = log --graph --date-order -C -M --pretty=format:'%C(red)%h%Creset - %C(green)%ad %C(Cyan)[%an]%C(Yellow)%d%Creset %s' --date=short
    lg       = log --graph --date-order -C -M --pretty=format:'%C(red)%h%Creset - %C(green)%ad %C(Cyan)[%an]%C(Yellow)%d%Creset %s' --all --date=short

# stash
    ss       = stash                        # stash changes
    sl       = stash list                   # list stashes
    sa       = stash apply                  # apply stash (restore changes)
    sd       = stash drop                   # drop stashes (destory changes)

[help]
    autocorrect = 1
