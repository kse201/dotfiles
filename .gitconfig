[color]
    status = auto
    branch = auto
    ui = auto
[core]
	excludesfile = .gitignore
	paper = lv -c
    autocrlf = false
    editor = vim

[merge] ; (1.7.6 later)
    ff = false
[pull] ; (1.7.9 later)
    rebase = true

[branch "master"]
    mergeoptions = --no-ff
    rebase  = true

[alias]
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
    ignore   = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored  = !git ls-files -v | grep "^[a-z]" ; view ignored files
    st       = status
    sst       = status --short
    sh       = show
    sb       = show-branch
    rema     = rebase origin/master master
    ci       = commit
    cm       = commit
    cmt      = commit -v
    coma     = commit -a -v
    cma      = commit -a -v
    co       = checkout
    cl       = clone
    dc       = diff --cached
    df       = diff -w
    d        = diff -C
    dn       = diff -Cw --name-only
    ds       = diff -C --stat
    dsp      = diff -C --stat -p
    dw       = diff -C --color-words
    graph    = log --graph --date-order -C -M --pretty=format:'<%h> %ad [%an] %Cgreen%d%Creset %s' --all --date=short
    lg       = log --graph --date-order -C -M --pretty=format:'<%h> %ad [%an] %Cgreen%d%Creset %s' --all --date=short
    l        = log --graph --date-order -C -M --pretty=format:'<%h> %ad [%an] %Cgreen%d%Creset %s' --date=short
    m        = checkout master
    ituja    = log --patch -S

[help]
    autocorrect = 1
