snippet figure
alias   \begin{figure} \figure
	\begin{figure}
		\begin{center}
			\includegraphics[scale=${1}]{${2}}
			\caption{${3}}
			\label{$3}
		\end{center}
	\end{figure}

snippet table
alias   \begin{table} \table \tabular tabular
	\begin{table}[${1:htbp}]
      \begin{tabular}{${2:|c|c|c|}}
          ${3:TARGET} \\
      \end{tabular}
      \caption{${4}}
      \label{$4}
    \end{table}
