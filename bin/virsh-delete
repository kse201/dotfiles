#!/bin/sh

# Usage: virsh-delete <domain>
DOMAIN_NAME=$1

# status check 
LANG=C virsh dominfo test_chef_server | grep running
if [ ! $? ] ; then
    virsh destory ${DOMAIN_NAME}
fi

# destroy
virsh undefine \
--managed-save \
--remove-all-storage \
--wipe-storage \
--snapshots-metadata \
${DOMAIN_NAME}
