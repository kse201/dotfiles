#!/bin/sh

# Usage: virsh-delete <domain>
DOMAIN_NAME=$1

# status check 
LANG=C virsh dominfo ${DOMAIN_NAME} | grep running
if [ $? == 0 ] ; then
    virsh destroy ${DOMAIN_NAME}
fi

# destroy
virsh undefine \
    --managed-save \
    --remove-all-storage \
    --wipe-storage \
    --snapshots-metadata \
    ${DOMAIN_NAME}
